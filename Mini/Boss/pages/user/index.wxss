@import '/style/weui.wxss';

.page{    
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;    
}
.page1{background-color: #278296;color: #efefef;}
.page__hd {
    padding: 25px 40px;
    display: flex;
}
.page1 .page__bd {
    padding-bottom: 5px;
}
.page__bd {
    padding-bottom: 20px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}
.page1 .iconfont.ibg{
  font-size: 4rem;
  color: #b7e2f0;
  text-align: center;
  font-weight: 300;
}
.page .iconfont{
  font-size: 2rem;
  color: #278296;
  text-align: center;
}
.page2 .iconfont{
  font-size: 1.5rem;
  color: #278296;
  text-align: center;
  vertical-align:middle;
}
.page__ft{
    text-align: center;
    padding:0 0 10px;
    padding:0 0 calc(10px + constant(safe-area-inset-bottom));
    padding:0 0 calc(10px + env(safe-area-inset-bottom));
}
.page1 .weui-grids{border:0;}
.page1 .weui-grid{border:0;}
.page1 .weui-grid__label{color: #efefef;}
.page1 .page__title {
    text-align: center;
    font-size: 18px;
    font-weight: 400;
    display: inline-block;
    line-height: 120%;
    min-width: 35%;
    max-width: 50%;
    color: #b7e2f0;
}
.page__title .userName{
  font-size: 13px;
  font-weight: 300;
}
.hr-o{
  width: 1px;
  height: 62px;
  background-color:  #b7e2f0;
  margin-top: -10px;
  margin-left: 10px;

}
.page__title_comp{
  margin-left: 25px;
}
.page__title .compName{
  font-size: 14px;
  font-weight: 300;
  text-align: left;
  position: relative;
}
.page1 .page__desc {
    margin-top: 5px;
    color: #efefef;
    text-align: left;
    font-size: 14px;
}
.weui-cell_example:before{
    left:52px;
}
.tip-msg{
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  font-size: 11px;
  color: #565656;
}
